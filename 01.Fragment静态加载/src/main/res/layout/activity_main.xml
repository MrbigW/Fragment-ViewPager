<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/myfragment_main"
        android:name="com.atsgg.fragmenttest.MyFragment"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        tools:layout="@layout/ll_fragment1"/>

    <fragment
        android:id="@+id/secondfragment_main"
        android:name="com.atsgg.fragmenttest.SecondFragment"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        tools:layout="@layout/ll_fragment2"/>

</LinearLayout>
